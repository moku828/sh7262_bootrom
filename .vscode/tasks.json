    "version": "2.0.0",
    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "command": "docker",
            "args": ["run", "--rm", "-it", "-v${workspaceFolder}:/workspace", "sh-tools/make"]
        },
        {
            "label": "make clean",
            "type": "shell",
            "command": "docker",
            "args": ["run", "--rm", "-it", "-v${workspaceFolder}:/workspace", "sh-tools/make", "clean"]
        }
    ]
}